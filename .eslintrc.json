{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "root": true,
    "rules": {
        "brace-style": [
            2,
            "stroustrup"
        ],
        "camelcase": [
            2,
            {
                "properties": "always"
            }
        ],
        "comma-spacing": 2,
        "curly": [
            2,
            "all"
        ],
        "eqeqeq": 2,
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "key-spacing": [
            2,
            {
                "mode": "strict"
            }
        ],
        "keyword-spacing": 2,
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-console": 1,
        "no-dupe-args": 2,
        "no-extra-semi": 2,
        "no-irregular-whitespace": 2,
        "no-loop-func": 1,
        "no-spaced-func": 2,
        "no-tabs": 2,
        "no-trailing-spaces": 2,
        "no-unused-expressions": 2,
        "padded-blocks": [
            2,
            "never"
        ],
        "quotes": [
            2,
            "double",
            {
                "avoidEscape": false
            }
        ],
        "semi": [
            2,
            "always"
        ],
        "semi-spacing": [
            2,
            {
                "before": false
            }
        ],
        "space-before-blocks": 2,
        "space-infix-ops": 2,
        "spaced-comment": 2
    }
}